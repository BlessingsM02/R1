<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roadside_Rescue_2.Views.HomePage"
             Title="HomePage"
             Shell.FlyoutBehavior="Disabled">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Working Status" FontSize="Medium" />
            <Switch x:Name="WorkingSwitch" Toggled="OnWorkingToggled" />
            <Label x:Name="LocationLabel" Text="Location: Not Available" FontSize="Medium" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>